<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leanr_layout"
            android:orientation="vertical" >

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="326dp"
                android:layout_height="238dp"
                android:layout_marginLeft="120px"
                android:layout_marginTop="200px"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:id="@+id/loti"
                app:lottie_rawRes="@raw/main2" />

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_Namestation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_background_color="@color/Dark"
                app:neomorph_corner_radius="10dp"
                android:layout_marginTop="30dp"
                app:neomorph_elevation="6dp"
                app:neomorph_highlight_color="#4DCABEBE"
                app:neomorph_shadow_color="@color/black2"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/namest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shap_rectangle"
                    android:hint="Enter Celsius"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="25dp"
                    android:textColor="@color/yellow"
                    android:textColorHint="#F1D17C" />

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_adharNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_type="outer"
                app:neomorph_elevation="6dp"
                app:neomorph_corner_radius="10dp"
                app:neomorph_background_color="@color/Dark"
                app:neomorph_shadow_color="@color/black2"
                app:neomorph_highlight_color="#4DCABEBE"
                android:layout_below="@id/layout_Namestation"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shap_rectangle"
                    android:hint="Convert"
                    android:textColorHint="#F1D17C"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/yellow" />

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_showFeranhit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_background_color="@color/Dark"
                app:neomorph_corner_radius="10dp"
                android:layout_marginTop="30dp"
                app:neomorph_elevation="6dp"
                app:neomorph_highlight_color="#4DCABEBE"
                app:neomorph_shadow_color="@color/black2"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/showFeranhit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shap_rectangle"
                    android:hint="Enter feranhit"
                    android:textSize="70px"
                    android:textAlignment="center"
                    android:inputType="textPersonName"
                    android:paddingTop="25px"
                    android:textColor="@color/yellow"
                    android:textColorHint="#F1D17C" />

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_adharNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_type="outer"
                app:neomorph_elevation="6dp"
                app:neomorph_corner_radius="10dp"
                app:neomorph_background_color="@color/Dark"
                app:neomorph_shadow_color="@color/black2"
                app:neomorph_highlight_color="#4DCABEBE"
                android:layout_below="@id/layout_Namestation"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shap_rectangle"
                    android:hint="Convert"
                    android:textColorHint="#F1D17C"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/yellow" />

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        </LinearLayout>
</RelativeLayout>